<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <View
        android:layout_gravity="top"
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scale_seat"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        app:scale_base_height="600"
        app:scale_base_width="400">




        <View
            android:background="#e4e4e4"
            app:scale_width="240"
            app:scale_height="1"
            app:scale_left="80"
            app:scale_top="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:scale_height="40"
            app:scale_left="20"
            app:scale_top="10"
            app:scale_textsize="20"
            app:scale_width="360"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measure_chair_height"
            android:gravity="center" />
        <TextView
            app:scale_height="60"
            app:scale_left="50"
            app:scale_top="50"
            app:scale_textsize="16"
            app:scale_width="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/measure_chair_message"
            android:textSize="16sp" />

        <ImageView
            app:scale_height="200"
            app:scale_left="60"
            app:scale_top="130"
            app:scale_textsize="16"
            app:scale_width="280"
            android:id="@+id/seat_setting_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#f6f6f6" />
        <TextView
            android:gravity="center"
            app:scale_height="70"
            app:scale_left="175"
            app:scale_top="330"
            app:scale_textsize="50"
            app:scale_width="50"
            android:id="@+id/tv_f_seat_setting_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_accent"
            android:textStyle="bold" />

        <ImageButton
            app:scale_left="240"
            app:scale_top="340"
            android:id="@+id/btn_f_seat_setting_up"
            app:scale_width="50"
            app:scale_height="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_control_up_small"
            android:scaleType="center" />





        <ImageButton
            app:scale_left="110"
            app:scale_top="340"
            app:scale_width="50"
            app:scale_height="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_f_seat_setting_down"
            android:background="@drawable/btn_control_down_small" />

        <TextView
            app:scale_textsize="16"
            app:scale_left="125"
            app:scale_top="410"
            app:scale_width="150"
            app:scale_height="30"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/measure_chair_height"
            android:gravity="center" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:visibility="gone"
            android:id="@+id/btn_f_seat_setting_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#cc1b17"
            android:text="@string/btn_close"
            android:textColor="#fff" />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_f_seat_setting_weight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/btn_next"
            android:textColor="#fff" />


        <Button
            android:visibility="gone"
            android:id="@+id/btn_f_seat_setting_exercise"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_enabled"
            android:text="운동시작"
            android:textColor="#fff" />
    </LinearLayout>
</FrameLayout>