<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="invisible"
            android:textSize="16dp"
            android:id="@+id/alarm_add_date_tv"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="내일 4월3일 (수)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="invisible"
            android:enabled="false"
            android:id="@+id/alarm_add_date_pick"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="날짜선택"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TimePicker
        android:id="@+id/alarm_add_timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="menu_alarm"
        android:textColor="#000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="7">
        <TextView
            android:id="@+id/alarm_add_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_sun"
            android:textColor="#747474"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/alarm_add_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_mon"
            android:textColor="#747474"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/alarm_add_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_tue"
            android:textColor="#747474"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/alarm_add_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_wen"
            android:textColor="#747474"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/alarm_add_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_thu"
            android:textColor="#747474"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/alarm_add_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_fri"
            android:textColor="#747474"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/alarm_add_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="alarm_sat"
            android:textColor="#747474"
            android:textSize="16dp" />


    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/alarm_add_cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:layout_weight="1"
            android:text="@string/btn_close"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <Button
            android:id="@+id/alarm_add_saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/btn_save"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>