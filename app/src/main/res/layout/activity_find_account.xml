<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindAccountActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/find_account"
            android:textColor="#cc1b17"
            android:textSize="24dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:text="@string/sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_background"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:id="@+id/name1"

            android:hint="@string/join_name_1_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:visibility="gone"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/name2"

            android:hint="@string/sign_up_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:visibility="gone"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/name3"

            android:hint="@string/sign_up_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:text="@string/sign_up_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:background="@drawable/edit_text_background"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:id="@+id/phone1"
            android:entries="@array/phone"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>
        <EditText
            android:background="@drawable/edit_text_background"
            android:maxLength="4"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/phone2"
            android:layout_margin="20dp"
            android:hint="0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edit_text_background"
            android:maxLength="4"
            android:inputType="phone"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/phone3"
            android:layout_margin="20dp"
            android:hint="0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_margin="32dp"
            android:textColor="#fff"
            android:background="@drawable/button_round_slightly"
            android:id="@+id/btnFind"
            android:text="@string/find_account"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>


</LinearLayout>