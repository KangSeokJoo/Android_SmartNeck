<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="350dp"
    android:background="@drawable/button_background_disabled">
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="invisible"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/ble_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/baseline_replay_black_36"
            android:id="@+id/dialog_ble_retry"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>

    <ListView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/dialog_ble_listView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <TextView
        android:layout_marginBottom="12dp"
        android:id="@+id/dialog_ble_cancel"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>