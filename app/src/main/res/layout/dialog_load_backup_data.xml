<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="@drawable/button_background_disabled"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="@string/load_backup_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/edt_load_account"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/load_backup_admin_account"
        style="@style/edt_join"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/edt_load_password"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/load_backup_admin_password"
        style="@style/edt_join"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/edt_load_phone"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="관리자 휴대폰번호를 입력하세요."
        style="@style/edt_join"/>
    <View
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:padding="20dp"
        android:id="@+id/btn_load_data"
        android:gravity="center"
        android:textColor="#cc1b17"
        android:text="@string/load_backup_admin_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>