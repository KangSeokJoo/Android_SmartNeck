<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.ssomai.android.scalablelayout.ScalableLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        app:scale_base_height="650"
        app:scale_base_width="400">

        <ImageView
            android:id="@+id/join_4_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24px"
            app:scale_height="30"
            app:scale_left="10"
            app:scale_top="20"
            app:scale_width="30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sign_up_birth"
            android:textColor="#000"
            app:scale_height="30"
            app:scale_left="100"
            app:scale_textsize="24"
            app:scale_top="20"
            app:scale_width="200" />
        <EditText
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            app:scale_width="100"
            app:scale_height="30"
            app:scale_top="100"
            app:scale_left="30"
            app:scale_textsize="14"
            android:id="@+id/join_4_edt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true" />
        <EditText
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            app:scale_width="100"
            app:scale_height="30"
            app:scale_top="100"
            app:scale_left="150"
            app:scale_textsize="14"
            android:id="@+id/join_4_edt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true" />
        <EditText
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            app:scale_width="100"
            app:scale_height="30"
            app:scale_top="100"
            app:scale_left="270"
            app:scale_textsize="14"
            android:id="@+id/join_4_edt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sign_up_gender"
            android:textColor="#000"
            app:scale_height="30"
            app:scale_left="100"
            app:scale_textsize="24"
            app:scale_top="200"
            app:scale_width="200" />

        <RadioGroup
            app:scale_height="30"
            app:scale_left="75"
            app:scale_top="250"
            app:scale_width="250"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">



            <RadioButton
                android:gravity="center"
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/type_male" />

            <RadioButton
                android:gravity="center"
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/type_female" />


        </RadioGroup>

    </com.ssomai.android.scalablelayout.ScalableLayout>



    <Button
        android:layout_gravity="bottom"
        android:id="@+id/join_4_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_grey"
        android:text="@string/btn_next"
        android:textColor="#fff" />




</FrameLayout>





