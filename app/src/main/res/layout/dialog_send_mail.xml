<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="@drawable/button_background_disabled"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="엑셀 파일 이메일 전송"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/edt_mail"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="이메일 주소를 입력하세요."
        style="@style/edt_join"/>
    <View
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:padding="20dp"
            android:id="@+id/btn_cancel"
            android:gravity="center"
            android:textColor="#cc1b17"
            android:text="취소"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:padding="20dp"
            android:id="@+id/btn_send"
            android:gravity="center"
            android:textColor="#cc1b17"
            android:text="전송"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>