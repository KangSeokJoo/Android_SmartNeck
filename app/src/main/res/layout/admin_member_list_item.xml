<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_member_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="12dp"
                android:text="이름"
                android:textColor="#000"
                android:textSize="24sp" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_member_list_lately"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="12dp"
                    android:text="최근방문일시 : "
                    android:textColor="#9b9b9b"
                    android:textSize="18sp" />
                <ImageView
                    android:id="@+id/img_member_select_item_function_btn"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/icon_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:id="@+id/tv_member_list_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="12dp"
                    android:text="010-0101-0101"
                    android:textColor="#000"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/icon_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_member_list_birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="12dp"
                    android:text="1999-09-09"
                    android:textColor="#000"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_member_list_edit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/ic_edit_24px" />

            <ImageView
                android:id="@+id/img_member_list_delete"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/ic_delete_24px" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>