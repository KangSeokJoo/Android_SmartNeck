<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:paddingLeft="8dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24px"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/menu_measure_management"
            android:textColor="#cc1b17"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/btn_download"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="다운로드"
            android:textColor="#368AFF"
            android:textSize="20dp" />
    </LinearLayout>
    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout

        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:checked="true"
            android:textSize="20dp"
            android:layout_marginLeft="16dp"
            android:text="전체"
            android:id="@+id/check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lay_date_box"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:maxLength="4"
                    android:id="@+id/edt_year_start"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="YYYY"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="년"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/edt_month_start"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="MM"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="월"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/edt_day_start"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="DD"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="일"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="8dp"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:maxLength="4"
                    android:id="@+id/edt_year_end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="YYYY"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="년"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/edt_month_end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="MM"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="월"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/edt_day_end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="DD"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="일"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_search"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:textColor="#368AFF"
            android:text="검색"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#353535"
            android:textSize="20dp"
            android:text="asdf"
            android:paddingLeft="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/tv_search_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:paddingRight="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center"
            android:text="NO"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_name"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="날짜"
            android:textColor="#000000"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_value_title"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="최대근력"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="최대 유연성"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ListView
        android:id="@+id/lv_measure_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>