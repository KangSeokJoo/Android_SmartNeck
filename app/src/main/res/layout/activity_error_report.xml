<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ErrorReport.ErrorReportActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/error_dismiss_btn"
                    android:paddingLeft="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/error_title"
                    android:textColor="#cc1b17"
                    android:textSize="24dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cc1b17"/>

            <EditText
                android:gravity="top"
                android:id="@+id/error_contents_edt"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="18dp"
                android:textColor="@color/color_content_text"
                android:background="@drawable/edit_text_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:inputType="textMultiLine"
                android:hint="@string/error_hint_toast"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/error_finish_btn"
            android:textColor="#fff"
            android:layout_gravity="bottom"
            android:background="@color/color_grey"
            android:text="@string/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>