<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/color_white"
        android:visibility="visible"
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/browser_back"
            android:paddingLeft="16dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_arrow_back_ios_24px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@color/color_grey"
            android:textColor="@color/color_white"
            />

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#c1c1c1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_browser_home"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background='#00000000'
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_baseline_home_24px"
            />

        <ImageButton
            android:id="@+id/btn_browser_prev"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background='#00000000'
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24px"
            />

        <ImageButton
            android:id="@+id/btn_browser_next"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background='#00000000'
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24px"
            />

        <ImageButton
            android:id="@+id/btn_browser_reload"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background='#00000000'
            app:srcCompat="@drawable/ic_baseline_refresh_24px"
            />

    </LinearLayout>

</RelativeLayout>