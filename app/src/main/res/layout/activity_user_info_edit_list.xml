<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInfoEdit.UserInfoEditListActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/edit_list_dismiss_btn"
            android:paddingLeft="8dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24px"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/user_info_edit_title"
            android:textColor="#cc1b17"
            android:textSize="24dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cc1b17"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#5d5d5d"
            android:id="@+id/tv_pw"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/user_info_edit_pw"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24px"
            android:layout_width="50dp"
            android:layout_height="36dp" />
    </LinearLayout>
    <View
        android:background="#bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#5d5d5d"
            android:id="@+id/tv_phone"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/user_info_edit_phone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24px"
            android:layout_width="50dp"
            android:layout_height="36dp" />
    </LinearLayout>
    <View
        android:background="#bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>